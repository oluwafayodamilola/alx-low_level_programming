#include <stdio.h>
#include <stdlib.h>

/**
 * main - program that adds positive numbers.
 * @argc: total num of arguments
 * @argv: arguments passed to the program
 * @a: num in argv[i]
 * @sum: sum of num in argv
 *
 * Return: Always 0;
 */

int main(int argc, char *argv[])
{
	int a;
	int sum = 0;
	if (argc < 1)
	{
		printf("%d\n", argc -1);
	}
	else
	{
		for (int i = 1; i < argc; i++)
		{
			if (argv[i] )
			{
				printf("error\n");
			}
			else
			{
				a = argv[i];
				sum += a;
			}
			printf("%d\n", atoi(sum));
		}
	}
}
